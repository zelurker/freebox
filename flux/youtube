#!/usr/bin/perl

use LWP::Simple;
use strict;

my $str = shift @ARGV;
$str =~ s/^result\://;
print "direct\n";
print "Recherche\nRecherche\n"; # Transmis en mode list (ne contient pas //)
$str =~ s/ /\+/g;
if ($str) {
	$_ = get "http://www.youtube.com/results?search_query=$str&oq=$str";
} else {
	$_ = get "http://www.youtube.com/";
}

# open(F,">dump.html");
# print F $_;
# close(F);
my ($name,$url);
my %list = ();
my $content = 0;
my ($link,$text,$img);
foreach (split /\n/) {
	s/\&\#(..)\;/chr($1)/ge;
	$content = 1 if (/div class="result-item-main-content"/ || /class="yt-lockup-ellipsize"/);
	$content = 2 if (/div class="feed-item-content"/);
	if (/yt-thumb-clip-inner.+?src="(.+?)"/) {
		my $truc = $1;
		$img = $truc if ($truc =~ /jpg$/);
	} 
	if (/data-thumb="\/\/(.+?)"/) {
		my $truc = "http://$1";
		if ($truc =~ /jpg$/) {
			$img = $truc;
		}
	}
	if ($content == 1) {
		if (/href="(\/.+?)".*?\>(.+)<\/a/) {
			my ($url,$text) = ($1,$2);
			$img = "http:$img" if ($img =~ /^\/\//);
			print ($img ? "pic:$img " : "");
			print "$text\nhttp://www.youtube.com$url\n";
			$img = undef;
			$content = 0;
		}
	} elsif ($content == 2) {
		# Un peu + dur, des liens sur plusieurs lignes, c'est ce qui s'affiche
		# sans recherche...
		if (/href="(\/.+?)"/) {
			$link = $1;
		} elsif ($link && /\>/) {
			$text = 1;
		} elsif ($text) {
			s/^[ \t]+//;
			print ($img ? "pic:$img " : "");
			print "$_\nhttp://www.youtube.com$link\n";
			$link = $text = $content = undef;
		}
	}
}
